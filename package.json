{
  "name": "lootgen-server",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "14.x"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts, tsx, json",
    "execMap": {
      "ts": "ts-node"
    }
  },
  "scripts": {
    "start": "nodemon src/index.ts",
    "watch-all": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-build\" \"npm run watch-node\"",
    "watch-build": "tsc -w",
    "node": "ts-node src/index.ts",
    "build": "tsc;cp ormconfig.json dist",
    "test": "jest",
    "typeorm": "node --require ts-node/register ./node_modules/typeorm/cli.js",
    "postinstall": "yarn build",
    "prod-start": "cd dist;node --experimental-specifier-resolution=node index.js"
  },
  "dependencies": {
    "apollo-server": "^3.3.0",
    "class-validator": "^0.13.1",
    "graphql": "^15.5.2",
    "node-fetch": "^2.6.0",
    "prompt": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.2.37",
    "typescript": "^4.4.2"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@types/node": "^8.0.29",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "apollo-server-testing": "^2.25.2",
    "concurrently": "^5.3.0",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.6.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "sqlite3": "^5.0.0",
    "ts-jest": "^26.4.4",
    "ts-node": "3.3.0"
  }
}
